include templates/header.pug

.container.content
  .row
    form.col.s12(action='/save_user',method='post')
      .row
        .input-field.col.s6
          input#first_name.validate(placeholder='Username', type='text',name='username')
          
          label(for='first_name') Username
        .input-field.col.s6
          input#last_name.validate(type='text',name='lastname')
          
          label(for='last_name') First Name
      .row
        .input-field.col.s12
          input#password.validate(type='password',name='password')
          
          label(for='password') Password
      .row
        .input-field.col.s12
          input#email.validate(type='email',name='email')
          
          label(for='email') Email      
      .row
        .col.s12
          input.waves-effect.waves-light.btn(type='submit',value='Crear')

include templates/footer.pug